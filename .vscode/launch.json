    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Batman",
            "type": "debugpy",
            "request": "launch",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/bin/publish_wrapper.py",
            "args": [
                "batman"
            ]
        },
        {
            "name": "Run Robin",
            "type": "debugpy",
            "request": "launch",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/bin/publish_wrapper.py",
            "args": [
                "robin"
            ]
        },
       {
            "name": "Run Jaws",
            "type": "debugpy",
            "request": "launch",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/bin/publish_wrapper.py",
            "args": [
                "jaws"
            ]
        },
        {
            "name": "Run Current File on Robin",
            "type": "debugpy",
            "request": "launch",
            "module": "pybricksdev",
            "console": "integratedTerminal",
            "args": [
                "run",
                "ble",
                "${file}",
                "--name",
                "robin"
            ]
        },
        {
            "name": "Run Relative File",
            "type": "debugpy",
            "request": "launch",
            "module": "pybricksdev",
            "console": "integratedTerminal",
            "args": [
                "run",
                "ssh",
                "192.168.133.238",
                "${relativeFile}"
            ]
        },
        {
            "name": "Restore Factory Firmware",
            "type": "debugpy",
            "request": "launch",
            "module": "pybricksdev",
            "console": "integratedTerminal",
            "args": [
                "flash",
                "../pybricks-micropython/bricks/technichub/build/firmware.zip"
            ]
        },
        {
            "name": "Flash PyBricks Firmware",
            "type": "debugpy",
            "request": "launch",
            "module": "pybricksdev",
            "console": "integratedTerminal",
            "args": [
                "flash",
                "../pybricks-micropython/bricks/cityhub/build/firmware.zip"
            ]
        },
        {
            "name": "Flash Move Hub",
            "type": "debugpy",
            "request": "launch",
            "module": "pybricksdev",
            "console": "integratedTerminal",
            "args": [
                "flash",
                "../pybricks-micropython/bricks/movehub/build/firmware.zip"
            ]
        },
        {
            "name": "Flash SPIKE Prime Hub",
            "type": "debugpy",
            "request": "launch",
            "module": "pybricksdev",
            "console": "integratedTerminal",
            "args": [
                "flash",
                "../pybricks-micropython/bricks/primehub/build/firmware.zip"
            ]
        },
    ]
}